@model SmallCartViewModel

@if (Model != null)
{
    <p>Items in cart<span class="badge badge-primary">@Model.NumberOfItems</p>
    <p>Итог: <b>@Model.TotalAmount.ToString("C")</b></p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="Index">Просмотр корзины</a>
    <br />
    <a class="btn btn-danger " asp-controller="Cart" asp-action="Clear">Очистить корзину</a>
}
else
{
    <p class="lead m-0">Ваша корзина пуста</p>
}